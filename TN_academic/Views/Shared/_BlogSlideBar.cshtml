<!-- Side bar start -->
@{
    var list = (List<TN_academic.Models.Blog>)ViewBag.RecentPosts;
}

<div class="col-lg-4 sticky-top">
    <aside class="side-bar sticky-top">
        <div class="widget">
            <h6 class="widget-title">Search</h6>
            <div class="search-bx style-1">
                <form role="search" method="post" action="/Blogs/Search">
                    <div class="input-group">
                        <input name="txtSearch" class="form-control" placeholder="Search here....." type="text">
                        <span class="input-group-btn">
                            <button type="submit" class="fa fa-search text-primary"></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
        <div class="widget recent-posts-entry">
            <h6 class="widget-title">Recent Posts</h6>
            <div class="widget-post-bx">
                @{
                    foreach (var item in list)
                    {
                        <div class="widget-post clearfix">
                            <div class="ttr-post-media"> <img src="@Url.Content(item.Thumbnail)" width="200" height="143" alt=""> </div>
                            <div class="ttr-post-info">
                                <div class="ttr-post-header">
                                    <h6 class="post-title"><a href="@Url.Action("Details", "Blogs", new {id = item.BlogID })">@item.BlogName</a></h6>
                                </div>
                                <ul class="media-post">
                                    <li><a href="javascript:;"><i class="fa fa-calendar"></i>@item.CreatedDate</a></li>
                                    <li><a href="javascript:;"><i class="fa fa-comments-o"></i>@item.BlogComments.Count Comments</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="widget widget-newslatter">
            <h6 class="widget-title">Newsletter</h6>
            <div class="news-box">
                <p>Enter your e-mail and subscribe to our newsletter.</p>
                <form class="subscription-form" action="http://educhamp.themetrades.com/demo/~/Content/assets/script/mailchamp.php" method="post">
                    <div class="ajax-message"></div>
                    <div class="input-group">
                        <input name="dzEmail" required="required" type="email" class="form-control" placeholder="Your Email Address" />
                        <button name="submit" value="Submit" type="submit" class="btn black radius-no">
                            <i class="fa fa-paper-plane-o"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="widget widget_gallery gallery-grid-4">
            <h6 class="widget-title">Our Gallery</h6>
            <ul>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic2.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic1.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic5.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic7.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic8.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic9.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic3.jpg" alt=""></a></div></li>
                <li><div><a href="javascript:;"><img src="~/Content/assets/images/gallery/pic4.jpg" alt=""></a></div></li>
            </ul>
        </div>
        <div class="widget widget_tag_cloud">
            <h6 class="widget-title">Covid-19 statistics - Viet Nam</h6>
            <div class="tagcloud">
                <a>Total Confirmed:&nbsp; <big class="totalConfirmed text-danger" style="font-weight: bold"></big> cases</a>
                <a>New Confirmed:&nbsp; <big class="newConfirmed text-warning" style="font-weight: bold"></big> cases</a>
                <a>Total Deaths:&nbsp; <big class="totalDeaths text-info" style="font-weight: bold"></big> cases</a>
                <a>Total Recovered:&nbsp; <big class="totalRecovered text-success" style="font-weight: bold"></big> cases</a>

            </div>
        </div>
    </aside>
</div>


<header class="ttr-header">
    <div class="ttr-header-wrapper">
        <div class="ttr-toggle-sidebar ttr-material-button">
            <i class="ti-close ttr-open-icon"></i>
            <i class="ti-menu ttr-close-icon"></i>
        </div>
        <div class="ttr-logo-box">
            <div>
                <a href="@Url.Action("Index", "Home")" class="ttr-logo">
                    <img class="ttr-logo-mobile" alt="" src="~/Content/assets/images/logo-mobile.png" width="30" height="30">
                    <img class="ttr-logo-desktop" alt="" src="~/Content/assets/images/logo-white.png" width="160" height="27">
                </a>
            </div>
        </div>
        <div class="ttr-header-menu">
            <ul class="ttr-header-navigation">
                <li>
                    <a href="@Url.Action("Index", "Home")" class="ttr-material-button ttr-submenu-toggle">HOME</a>
                </li>
                <li>
                    <a href="#" class="ttr-material-button ttr-submenu-toggle">QUICK MENU <i class="fa fa-angle-down"></i></a>
                    <div class="ttr-header-submenu">
                        <ul>
                            <li><a href="@Url.Action("Index", "Courses")">Our Courses</a></li>
                            <li><a href="~/Courses">Courses</a></li>
                            <li><a href="~/Blogs">Blogs</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
        <div class="ttr-header-right ttr-with-seperator">
            <ul class="ttr-header-navigation">
                <li>
                    <a href="javascript:;" class="ttr-material-button ttr-search-toggle"><i class="fa fa-search"></i></a>
                </li>
                <li>
                    <a href="#" class="ttr-material-button ttr-submenu-toggle"><span class="ttr-user-avatar"><img alt="" src="@Url.Content(((TN_academic.ViewModels.UserModel)Session[TN_academic.Common.CommonConstants.USER_LOGIN_MODEL]).Avatar)" width="32" height="32"></span></a>
                    <div class="ttr-header-submenu">
                        <ul>
                            <li><a href="~/profile">My profile</a></li>
                            <li><a href="~/Courses/MyCourses">My Course</a></li>
                            <li><a href="~/Login/Logout">Logout</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
        <div class="ttr-search-bar">
            <form class="ttr-search-form" action="Courses/Search" method="get">
                <div class="ttr-search-input-wrapper">
                    <input type="text" name="qq" placeholder="search something..." class="ttr-search-input">
                    <button type="submit" name="search" class="ttr-search-submit"><i class="ti-arrow-right"></i></button>
                </div>
                <span class="ttr-search-close ttr-search-toggle">
                    <i class="ti-close"></i>
                </span>
            </form>
        </div>
    </div>
</header>


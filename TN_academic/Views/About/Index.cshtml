                        <p>Prime Minister Nguyen Xuan Phuc stated: “Fighting against the pandemic like fighting against an enemy".</p>
                    </div>
                </div>
                <div class="testimonial-carousel owl-carousel owl-btn-1 col-12 p-lr0">
                    <div class="item">
                        <div class="testimonial-bx">
                            <div class="testimonial-thumb">
                                <img src="~/public/img/viet-nam-flag.png" />
                            </div>
                            <div class="testimonial-info">
                                <h5 class="name">Viet Nam</h5>
                                <p class="vnDate"></p>
                            </div>
                            <div class="testimonial-content">
                                <table>
                                    <tr>
                                        <td>
                                            <p>Total Confirmed:&nbsp; <big class="totalConfirmed text-danger" style="font-weight: bold"></big></p>
                                            <p>New Confirmed:&nbsp; <big class="newConfirmed text-warning" style="font-weight: bold"></big></p>
                                        </td>
                                        <td>
                                            <p>Total Deaths:&nbsp; <big class="totalDeaths text-info" style="font-weight: bold"></big></p>
                                            <p>Total Recovered:&nbsp; <big class="totalRecovered text-success" style="font-weight: bold"></big></p>
                                        </td>
                                    </tr>
                                    <tr>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="testimonial-bx">
                            <div class="testimonial-thumb">
                                <img src="~/public/img/global-logo.jpg" />
                            </div>
                            <div class="testimonial-info">
                                <h5 class="name">Global</h5>
                                <p class="globalDate"></p>
                            </div>
                            <div class="testimonial-content">
                                <table>
                                    <tr>
                                        <td>
                                            <p>Total Confirmed:<br /> <big class="globtotalConfirmed text-danger" style="font-weight: bold"></big></p>
                                            <p>New Confirmed:<br /> <big class="globnewConfirmed text-warning" style="font-weight: bold"></big></p>
                                        </td>
                                        <td>
                                            <p>Total Deaths:<br /> <big class="globtotalDeaths text-info" style="font-weight: bold"></big></p>
                                            <p>Total Recovered:<br /> <big class="globtotalRecovered text-success" style="font-weight: bold"></big></p>
                                        </td>
                                    </tr>
                                    <tr>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <section class="checkout spad">
        <div class="container">
            <h2 style="padding-top:5%;padding-bottom: 5%">Sorry! No results found!</h2>
        </div>
    </section>
}

@section ClientScript{
    <script>
        var settings = {
            "url": "https://api.covid19api.com/summary",
            "method": "GET",
            "timeout": 0,
            "headers": {
                "X-Access-Token": "5cf9dfd5-3449-485e-b5ae-70a60e997864"
            },
        };

        $.ajax(settings).done(function (response) {
            console.log(response);
            $(".totalConfirmed").empty().append(response.Countries[184].TotalConfirmed);
            $(".newConfirmed").empty().append(response.Countries[184].NewConfirmed);
            $(".totalDeaths").empty().append(response.Countries[184].TotalDeaths);
            $(".totalRecovered").empty().append(response.Countries[184].TotalRecovered);
            date = new Date(response.Countries[184].Date);

            $(".vnDate").empty().append(date.getDate() + '/' + (date.getMonth() + 1) + '/' + date.getFullYear());

            $(".globtotalConfirmed").empty().append(response.Global.TotalConfirmed);
            $(".globnewConfirmed").empty().append(response.Global.NewConfirmed);
            $(".globtotalDeaths").empty().append(response.Global.TotalDeaths);
            $(".globtotalRecovered").empty().append(response.Global.TotalRecovered);

        });
    </script>
}
@model List<TN_academic.Models.AboutU>
@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Banner = "~/Content/assets/images/banner/banner2.jpg";
    ViewBag.BannerText = "About Us";
    ViewBag.AboutActive = "active";

}
@if (Model.Count > 0)
{
    <div class="content-block">
        <div class="section-area section-sp1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 m-b30">
                        <div class="feature-container">
                            <div class="feature-md text-white m-b20">
                                <a href="javascript:;" class="icon-cell"><img src="~/Content/assets/images/icon/icon1.png" alt="" /></a>
                            </div>
                            <div class="icon-content">
                                <h5 class="ttr-tilte">Our Philosophy</h5>
                                <p>A community of lifelong learners, responsible global citizens, and champions of our own success.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 m-b30">
                        <div class="feature-container">
                            <div class="feature-md text-white m-b20">
                                <a href="javascript:;" class="icon-cell"><img src="~/Content/assets/images/icon/icon2.png" alt="" /></a>
                            </div>
                            <div class="icon-content">
                                <h5 class="ttr-tilte">Kingster's Principle</h5>
                                <p>A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 m-b30">
                        <div class="feature-container">
                            <div class="feature-md text-white m-b20">
                                <a href="javascript:;" class="icon-cell"><img src="~/Content/assets/images/icon/icon3.png" alt="" /></a>
                            </div>
                            <div class="icon-content">
                                <h5 class="ttr-tilte">Key Of Success</h5>
                                <p>The key to success is to focus our conscious mind on things we desire not things we fear.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 m-b30">
                        <div class="feature-container">
                            <div class="feature-md text-white m-b20">
                                <a href="javascript:;" class="icon-cell"><img src="~/Content/assets/images/icon/icon4.png" alt="" /></a>
                            </div>
                            <div class="icon-content">
                                <h5 class="ttr-tilte">Our Philosophy</h5>
                                <p>A community of lifelong learners, responsible global citizens, and champions of our own success.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-area bg-gray section-sp1 our-story">
            <div class="container">
                <div class="row align-items-center d-flex">
                    <div class="col-lg-8 col-md-12 heading-bx">
                        <h2 class="m-b10">Our Story</h2>
                        <h5 class="fw4">It is a long established fact that a reade.</h5>
                        @{
                            foreach (var item in Model)
                            {
                                @Html.Raw(item.Description)
                            }
                        }

                    </div>
                    <div class="col-lg-4 col-md-12 heading-bx p-lr">
                        <div class="video-bx">
                            <img src="~/Content/assets/images/about/pic1.jpg" alt="" />
                            <a href="https://www.youtube.com/watch?v=x_sJzVe9P_8" class="popup-youtube video"><i class="fa fa-play"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-area section-sp2 bg-fix ovbl-dark" style="background-image:url(~/Content/assets/images/background/bg1.jpg);">

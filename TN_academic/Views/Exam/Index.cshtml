@model List<TN_academic.Models.Examination>
@{
    ViewBag.Title = "Examination";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    
}

@Html.Partial("_Header_db")

<main class="col-lg-12">
    <div class="container-fluid">
        <div class="db-breadcrumb" style="padding-top: 5%">
            <h4 class="breadcrumb-title">Examination</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a></li>
                <li><a href="@Url.Action("MyCourses", "Courses")">My Courses</a></li>
                <li>@ViewBag.CourseName</li>
                <li>Examination</li>
            </ul>
        </div>

        @foreach (var item in Model)
        {
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="email-wrapper">
                        <div class="mail-list-container">
                            <div class="card-body">
                                <div class="card-courses-list bookmarks-bx">
                                    <div class="card-courses-full-dec">
                                        <div class="card-courses-title">
                                            <h2 class="m-b5">@item.ExamName</h2>
                                        </div>
                                        <div class="card-courses-list-bx">
                                            <ul class="card-courses-view">
                                                <li class="card-courses-review">
                                                    <h5>Course</h5>
                                                    <h4>@item.Cours.CourseName</h4>
                                                </li>
                                                <li class="card-courses-review">
                                                    <h5>Examination Date</h5>
                                                    <h4>@item.ExaminationDate.Value</h4>
                                                </li>
                                                <li class="card-courses-review">
                                                    <h5>Time</h5>
                                                    <h4>@item.Time minutes</h4>
                                                </li>
                                                <li class="card-courses-review">
                                                    <h5>Questions</h5>
                                                    <h4>@item.ExaminationContents.Count</h4>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="row card-courses-dec">
                                            <div class="col-md-12">
                                                <a href="@Url.Action("Start", "Exam", new { id = item.ExamID })" class="btn radius-xl">Start</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
 
        </div>
</main>
<div class="ttr-overlay"></div>


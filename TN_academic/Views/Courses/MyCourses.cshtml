@model List<TN_academic.Models.OrderDetail>
@{
    ViewBag.Title = "My Courses";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


@Html.Partial("_Header_db")
<main class="col-lg-12">
    <div class="container-fluid">
        @Html.Partial("_Breadcrumb_db")

        <div class="row">
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>My Courses</h4>
                    </div>
                    <div class="widget-inner">
                        @foreach (var item in Model)
                        {
                            <div class="card-courses-list admin-courses">
                                <div class="card-courses-media">
                                    <img src="@Url.Content(item.Cours.Thumbnail)" style="max-width: 250px; max-height: 250px" alt="" />
                                </div>
                                <div class="card-courses-full-dec">
                                    <div class="card-courses-title">
                                        <h4>@item.Cours.CourseName</h4>
                                    </div>
                                    <div class="card-courses-list-bx">
                                        <ul class="card-courses-view">
                                            <li class="card-courses-user">
                                                <div class="card-courses-user-pic">
                                                    <img src="@Url.Content(item.Cours.User.Avatar)" alt="" />
                                                </div>
                                                <div class="card-courses-user-info">
                                                    <h5>Instructor</h5>
                                                    <h4>@item.Cours.User.FirstName @item.Cours.User.LastName</h4>
                                                </div>
                                            </li>
                                            <li class="card-courses-categories">
                                                <h5>Category</h5>
                                                <h4>@item.Cours.Category.CategoryName</h4>
                                            </li>
                                            <li class="card-courses-review">
                                                <h5>@item.Cours.Lectures.Count Lectures</h5>
                                                <h5>@item.Cours.Examinations.Count Exam</h5>
                                            </li>
                                            <li class="card-courses-stats">
                                                @if (item.Cours.Lectures.Count == 0)
                                                {
                                                    <div class="btn button-sm yellow radius-xl">Empty</div>
                                                }
                                                else
                                                {
                                                    <div class="btn button-sm green radius-xl">Registed</div>
                                                }

                                            </li>
                                        </ul>
                                    </div>
                                    <div class="row card-courses-dec">
                                        <div class="col-md-12">
                                            <h6 class="m-b10">Short Description</h6>
                                            <p>@item.Cours.ShortDescription </p>
                                        </div>
                                        <div class="col-md-12">
                                            <a href="@Url.Action("Learn", "Courses", new { course = item.CourseID })" class="btn green radius-xl outline">Learn</a>
                                            <a href="@Url.Action("Index", "Exam", new { id = item.CourseID })" class="btn red outline radius-xl ">Exam</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<div class="ttr-overlay"></div>

@model TN_academic.Models.Question

@{
    ViewBag.Title = "Question Detail";
    ViewBag.Function = "Questions";
    ViewBag.ChildFunction = "Question Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h1 style="font-weight:bold; font-size:25px;" class="card-title">Detail of Question</h1>

            <div class="card-tools">
                <a class="btn btn-block btn-secondary float-right" href="~/Admin/Questions">Back to List</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 order-12 order-md-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.QuestionID)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.QuestionID)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Description)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.Description)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Content)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @switch (Model.TypeID)
                                    {
                                        case 1:
                                            <div>@Html.Raw(Model.Content)</div>
                                            break;
                                        case 2:
                                            <div class="text-center">
                                                <audio controls preload="none">
                                                    <source src="@Url.Content(Model.Content)">
                                                </audio>
                                            </div>
                                            break;
                                        case 3:
                                            <img src="@Url.Content(Model.Content)" style="max-width: 50%" alt="Question" />
                                            break;
                                    }
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.ChoiceA)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @if (Model.Answer.Equals("1"))
                                    {
                                        <b>@Model.ChoiceA</b>
                                    }
                                    else
                                    {
                                        @Model.ChoiceA
                                    }
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.ChoiceB)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @if (Model.Answer.Equals("2"))
                                    {
                                        <b>@Model.ChoiceB</b>
                                    }
                                    else
                                    {
                                        @Model.ChoiceB
                                    }
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.ChoiceC)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @if (Model.Answer.Equals("3"))
                                    {
                                        <b>@Model.ChoiceC</b>
                                    }
                                    else
                                    {
                                        @Model.ChoiceC
                                    }
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.ChoiceD)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @if (Model.Answer.Equals("4"))
                                    {
                                        <b>@Model.ChoiceD</b>
                                    }
                                    else
                                    {
                                        @Model.ChoiceD
                                    }
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Level)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @switch (Model.Level)
                                    {
                                        case -1:
                                            <span class="badge badge-success">easy</span>
                                            break;
                                        case 0:
                                            <span class="badge badge-info">nomral</span>
                                            break;
                                        case 1:
                                            <span class="badge badge-warning">difficult</span>
                                            break;
                                        case 2:
                                            <span class="badge badge-danger">extremely difficult</span>
                                            break;
                                    }
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Cours.CourseName)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.Cours.CourseName)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.QuestionType.TypeName)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.QuestionType.TypeName)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
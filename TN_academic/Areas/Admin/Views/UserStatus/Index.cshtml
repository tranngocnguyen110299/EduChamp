@model IEnumerable<TN_academic.Models.UserStatu>

@{
    ViewBag.Title = "Manage User Status";
    ViewBag.Manage = "Manage User Status";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Data of user status</h3>
            </div>
            <div class="card-body">
                <table id="tbl_UserStatus" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StatusName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsBlock)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusName)
                                </td>
                                <td>
                                    @if (item.IsBlock == true)
                                    {
                                        <span class="badge badge-success">block</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">no</span>
                                    }
                                </td>

                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="~/Admin/UserStatus/Details/@item.StatusID">
                                        <i class="fas fa-eye">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" href="~/Admin/UserStatus/Edit/@item.StatusID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section ScriptConfig
{
    @Styles.Render("~/asset/css/datatable")
    @Scripts.Render("~/asset/scripts/datatable")
}
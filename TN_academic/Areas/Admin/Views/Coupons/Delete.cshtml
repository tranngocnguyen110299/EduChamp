@model TN_academic.Models.Coupon

@{
    ViewBag.Title = "Delete Coupon";
    ViewBag.Function = "Coupons";
    ViewBag.ChildFunction = "Delete Coupon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-8">
                    <h1 style="font-weight:bold; font-size:25px" class="card-title">Are you sure you want to delete this?</h1>
                </div>

                <div class="col-sm-2">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <div class="card-tools">
                                <input type="submit" value="Delete" class="btn btn-block btn-secondary float-right btn-danger" />
                            </div>
                        </div>
                    }
                </div>

                <div class="card-tools col-sm-2">
                    <a class="btn btn-block btn-secondary float-right" href="~/Admin/Coupons">Cancel</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 order-12 order-md-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.CouponID)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.CouponID)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.CouponName)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.CouponName)
                                </p>
                            </div>
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.CouponCode)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.CouponCode)
                                </p>
                            </div>
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Description)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.Raw(Model.Description)
                                </p>
                            </div>
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Rate)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.Rate)
                                </p>
                            </div>
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Quantity)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.Quantity)
                                </p>
                            </div>
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Thumbnail)</strong>:
                                </div>
                                @if (!Model.Thumbnail.IsEmpty())
                                {
                                    <img class="col-sm-10" id="imageDetail" src="@Url.Content(Model.Thumbnail)" style="max-width:300px" />
                                }
                                else
                                {
                                    <p>No Image</p>
                                }
                            </div>
                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Status)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @if (Model.Status == true)
                                    {
                                        <span class="badge badge-success">active</span>
                                    }
                                    else if (Model.Status == false)
                                    {
                                        <span class="badge badge-danger">disable</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
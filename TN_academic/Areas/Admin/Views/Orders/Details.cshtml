@model TN_academic.Models.Order

@{
    ViewBag.Title = "Order Details";
    ViewBag.Function = "Orders";
    ViewBag.ChildFunction = "Order Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var orderDetailList = (List<TN_academic.Models.OrderDetail>)ViewBag.OrderDetail;
}

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-4">
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="@Url.Content(Model.User.Avatar)"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.User.FirstName @Model.User.LastName</h3>

                        <p class="text-muted text-center">@Model.User.Username</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Gender</b> <a class="float-right">
                                    @{
                                        if (Model.User.Gender == true)
                                        {
                                            <div>Male</div>
                                        }
                                        else
                                        {
                                            <div>Female</div>
                                        }
                                    }
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Birthday</b> <a class="float-right">@Model.User.DOB.Value.ToShortDateString()</a>
                            </li>
                            <li class="list-group-item">
                                <b>Phone</b> <a class="float-right">@Model.User.Phone</a>
                            </li>
                            <li class="list-group-item">
                                <b>Email</b> <a class="float-right">@Model.User.Email</a>
                            </li>
                            <li class="list-group-item">
                                <b>Address</b> <a class="float-right">@Model.User.Address</a>
                            </li>
                            <li class="list-group-item">
                                <b>Order ID</b> <a class="float-right">@Model.OrderID</a>
                            </li>
                            <li class="list-group-item">
                                <b>Coupon</b> <a class="float-right">@Model.Coupon.CouponName</a>
                            </li>
                            <li class="list-group-item">
                                <b>Toatl price</b> <a class="float-right">@Model.Total</a>
                            </li>
                            <li class="list-group-item">
                                <b>Payment</b> <a class="float-right">@Model.Payment.PaymentName</a>
                            </li>
                            <li class="list-group-item">
                                <b>Payment Status</b>
                                <a class="float-right">
                                    @if (Model.PaymentStatus == 0)
                                    {
                                        <span class="badge badge-warning">unpaid</span>
                                    }
                                    else if (Model.PaymentStatus == 1)
                                    {
                                        <span class="badge badge-success">paid</span>
                                    }
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Status</b>
                                <a class="float-right">
                                    @if (Model.Status == 0)
                                    {
                                        <span class="badge badge-danger">failed</span>
                                    }
                                    else if (Model.Status == 1)
                                    {
                                        <span class="badge badge-success">success</span>
                                    }
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-lightblue">
                        <div class="card-header">
                            <h3 class="card-title">Data of Order Detail</h3>
                        </div>
                        <div class="card-body">
                            <table id="tbl_OrderDetail" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Product Name
                                        </th>
                                        <th>
                                            Unit Price
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in orderDetailList)
                                    {
                                        <tr>
                                            <td>
                                                @item.Cours.CourseName
                                            </td>
                                            <td>
                                                @item.UnitPrice
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@section ScriptConfig
{
    @Styles.Render("~/asset/css/datatable")
    @Scripts.Render("~/asset/scripts/datatable")
}
